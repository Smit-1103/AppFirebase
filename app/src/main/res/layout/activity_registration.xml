<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".Registration"
android:background="#ABD4A4">
    <ImageButton
        android:id="@+id/btback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13sp"
        android:layout_marginLeft="15sp"
        android:padding="8sp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24">
    </ImageButton>

<TextView
    android:id="@+id/tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_margin="30sp"
    android:text="Register here !"
    android:padding="20sp"
    android:textColor="@color/black"
    android:textSize="30sp"
    android:textFontWeight="@integer/material_motion_duration_short_2"
    />
    <EditText
        android:id="@+id/etName"
        android:hint="   Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_marginBottom="10sp"
        android:drawableStart="@drawable/ic_baseline_perm_identity_24"
        android:paddingLeft="4sp"
        android:paddingBottom="12sp"
        android:paddingRight="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10sp" />
    <EditText
        android:id="@+id/etMobile"
        android:hint="   Mobile number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_marginBottom="10sp"
        android:drawableStart="@drawable/ic_baseline_mobile_friendly_24"
        android:paddingLeft="4sp"
        android:inputType="number"
        android:paddingBottom="12sp"
        android:paddingRight="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"/>
    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:layout_marginRight="40sp"
        android:layout_marginBottom="10sp"
        android:drawableStart="@drawable/ic_baseline_data_usage_24"
        android:paddingLeft="4sp"
        android:paddingBottom="12sp"
        android:paddingRight="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        android:hint="   Age "/>
<EditText
    android:id="@+id/etMail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40sp"
    android:layout_marginRight="40sp"
    android:layout_marginBottom="10sp"
    android:drawableStart="@drawable/ic_baseline_email_24"
    android:paddingLeft="4sp"
    android:paddingBottom="12sp"
    android:paddingRight="18sp"
    android:textColor="@color/black"
    android:layout_marginTop="10sp"
    android:hint="   Email Id"/>

<EditText
    android:id="@+id/etPass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40sp"
    android:layout_marginRight="40sp"
    android:textColor="@color/black"
    android:layout_marginBottom="10sp"
    android:hint="   Password"
    android:drawableStart="@drawable/ic_baseline_vpn_key_24"
    android:paddingLeft="4sp"
    android:paddingBottom="12sp"
    android:paddingRight="18sp"
    android:inputType="textPassword"/>

    <androidx.constraintlayout.utils.widget.MotionButton
        android:id="@+id/btRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:layout_marginBottom="20sp"
        android:textColor="#29665C"
        android:textSize="16sp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:text="Register"/>

    <androidx.constraintlayout.utils.widget.MotionButton
        android:id="@+id/btCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100sp"
        android:layout_marginRight="100sp"
        android:layout_marginBottom="10sp"
        android:textColor="#29665C"
        android:textSize="16sp"
        android:background="@drawable/button"
        android:textAllCaps="false"
        android:text="Cancel"/>


</LinearLayout>